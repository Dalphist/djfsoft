<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.BookMapper">
    <select id="getAllBookslist" resultType="Book">
        select * from book      
    </select>     
    <select id="getBookslistByType" parameterType="String" resultType="Book">
        select * from book where type_id in #{type_id}     
    </select>
    <insert id="addBook" parameterType="Book">
    	insert into book (name,code ) values (#{name},#{code})    
    </insert> 
    <delete id="delBook" parameterType="String">
    	delete from book where id = #{book_id}
    </delete>    
</mapper>