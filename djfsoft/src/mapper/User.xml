<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.UserMapper">
    <insert id="add" parameterType="User" >
        insert into t_user ( user_name ) values (#{user_name})    
    </insert>
     
    <delete id="delete" parameterType="User" >
        delete from t_user where id= #{id}   
    </delete>
     
    <select id="get" parameterType="User" resultType="User">
        select * from t_user  where user_name= #{user_name} and password=#{password}     
    </select>

    <update id="update" parameterType="User" >
        update from t_user user_name=#{user_name} where id=#{id}    
    </update>
    <select id="list" resultType="User">
        select * from t_user      
    </select>     
</mapper>