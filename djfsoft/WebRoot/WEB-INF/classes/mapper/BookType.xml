<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.BookTypeMapper">
    <insert id="add" parameterType="BookType" >
        insert into book_type ( name ) values (#{name})    
    </insert>
     
    <delete id="delete" parameterType="BookType" >
        delete from book_type where id= #{id}   
    </delete>
     
    <update id="update" parameterType="BookType" >
        update book_type set type_name=#{type_name},parent_id=#{parent_id},priority=#{priority}
        where id=#{id}    
    </update>
    <select id="getRootTypesList" resultType="BookType">
        select * from book_type where parent_id is null
    </select>   
      
    <select id="getChildrenTypesList" parameterType="int" resultType="BookType">
        select * from book_type where parent_id = #{rootType_id}
    </select>     
</mapper>