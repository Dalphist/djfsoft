<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.ProductAttributeValueMapper">
    <insert id="add" parameterType="ProductAttributeValue" >
        insert into t_product_attribute_value
        (attribute_value_name,effective_flag,gmt_create) 
        values 
        (#{attributeName},#{effectiveFlag},#{gmtCreate})    
    </insert>
     
    <delete id="delete" parameterType="String" >
        delete from t_product_attribute_value where id= #{valueId}
    </delete>
     
    <update id="update" parameterType="ProductAttributeValue" >
        update t_product_attribute_value 
        set attribute_value_name=#{attributeName},effective_flag=#{effectiveFlag},gmt_modified=#{gmtModified}
        where id=#{id}    
    </update>
    
    <select id="getProductAttributeValuesByProductId" parameterType="String" resultType="ProductAttributeValue">
        SELECT * FROM t_product_to_attribute pta 
        JOIN t_product_attribute_value pa ON pta.attribute_id = pa.id
		WHERE pta.product_id = #{productId}
    </select>   
      
    <select id="getProductAttributeValuesByAttributeId" parameterType="String" resultType="ProductAttributeValue">
        SELECT * FROM t_product_attribute_value pav
		JOIN t_attribute_to_value atv ON pav.id = atv.attribute_value_id
		WHERE atv.attribute_id = #{attributeId}
    </select>  
    
</mapper>